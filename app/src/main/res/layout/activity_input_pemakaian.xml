<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pemakaian.input_pemakaian.InputPemakaianActivity">
    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/dashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="29dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@id/textView3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/montserrat_reguler"
        android:text="Input Pemakaian"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_detail1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/lbl_no_pk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:text="No. PK"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_no_pk"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/srchview"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="No PK"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/lbl_no_pk"
                app:layout_constraintTop_toBottomOf="@+id/lbl_no_pk" />

            <TextView
                android:id="@+id/lbl_nama_kegiatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nama Kegiatan"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/edt_no_pk"
                app:layout_constraintTop_toBottomOf="@+id/edt_no_pk" />

            <EditText
                android:id="@+id/edt_nama_kegiatan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/srchview"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Nama kegiatan"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_no_pk"
                app:layout_constraintStart_toStartOf="@+id/lbl_nama_kegiatan"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nama_kegiatan" />

            <TextView
                android:id="@+id/lbl_nama_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nama Pelanggan"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/edt_no_pk"
                app:layout_constraintTop_toBottomOf="@+id/edt_nama_kegiatan" />

            <EditText
                android:id="@+id/edt_nama_pelanggan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/srchview"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Nama pelanggan"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_nama_kegiatan"
                app:layout_constraintStart_toStartOf="@+id/lbl_nama_pelanggan"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nama_pelanggan" />

            <TextView
                android:id="@+id/lbl_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lokasi"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/edt_no_pk"
                app:layout_constraintTop_toBottomOf="@+id/edt_nama_pelanggan" />

            <EditText
                android:id="@+id/edt_lokasi"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/srchview"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Lokasi"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_nama_pelanggan"
                app:layout_constraintStart_toStartOf="@+id/lbl_lokasi"
                app:layout_constraintTop_toBottomOf="@+id/lbl_lokasi" />

            <TextView
                android:id="@+id/lbl_pemeriksa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pemeriksa"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/edt_no_pk"
                app:layout_constraintTop_toBottomOf="@+id/edt_lokasi" />

            <EditText
                android:id="@+id/edt_pemeriksa"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/srchview"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Pemeriksa"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_nama_pelanggan"
                app:layout_constraintStart_toStartOf="@+id/lbl_lokasi"
                app:layout_constraintTop_toBottomOf="@+id/lbl_pemeriksa" />

            <TextView
                android:id="@+id/lbl_penerima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Penerima"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/edt_no_pk"
                app:layout_constraintTop_toBottomOf="@+id/edt_pemeriksa" />

            <EditText
                android:id="@+id/edt_penerima"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/srchview"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Penerima"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_nama_pelanggan"
                app:layout_constraintStart_toStartOf="@+id/lbl_lokasi"
                app:layout_constraintTop_toBottomOf="@+id/lbl_penerima" />

            <TextView
                android:id="@+id/lbl_kepala_gudang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Kepala Gudang"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/edt_no_pk"
                app:layout_constraintTop_toBottomOf="@+id/edt_penerima" />

            <EditText
                android:id="@+id/edt_kepala_gudang"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/srchview"
                android:focusable="false"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Kepala gudang"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_nama_pelanggan"
                app:layout_constraintStart_toStartOf="@+id/lbl_lokasi"
                app:layout_constraintTop_toBottomOf="@+id/lbl_kepala_gudang" />

            <TextView
                android:id="@+id/lbl_pejabat_pengesahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pejabat Pengesahan"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/edt_no_pk"
                app:layout_constraintTop_toBottomOf="@+id/edt_kepala_gudang" />

            <EditText
                android:id="@+id/edt_pejabat_pengesahan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/srchview"
                android:focusable="false"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Pejabat pengesahan"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_nama_pelanggan"
                app:layout_constraintStart_toStartOf="@+id/lbl_lokasi"
                app:layout_constraintTop_toBottomOf="@+id/lbl_pejabat_pengesahan" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_simpan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/br_btn"
                android:elevation="8dp"
                android:fontFamily="@font/montserrat_reguler"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/edt_lokasi"
                app:layout_constraintStart_toStartOf="@+id/edt_lokasi"
                app:layout_constraintTop_toBottomOf="@+id/edt_pejabat_pengesahan" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>