                        app:layout_constraintTop_toBottomOf="@+id/lbl_no_do" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
