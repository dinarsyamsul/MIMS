<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00F7F8FA">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        android:src="@drawable/unit_list_monitoring1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/montserrat_reguler"
        android:text="Ketua Tim Penguji"
        android:textColor="#3F3D56"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@id/lbl_nip"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_reguler"
        android:text="Nama Ketua"
        android:textColor="#96979B"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/lbl_title" />

    <TextView
        android:id="@+id/lbl_nip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="22dp"
        android:fontFamily="@font/montserrat_reguler"
        android:text="NIP"
        android:textColor="#3F3D56"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_title"
        app:layout_constraintTop_toTopOf="@+id/lbl_title" />

    <TextView
        android:id="@+id/txt_nip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_reguler"
        android:text="00100010001"
        android:textColor="#96979B"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="@+id/lbl_nip"
        app:layout_constraintStart_toStartOf="@+id/lbl_nip"
        app:layout_constraintTop_toBottomOf="@+id/lbl_nip" />

</androidx.constraintlayout.widget.ConstraintLayout>