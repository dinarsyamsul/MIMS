                        app:layout_constraintTop_toTopOf="@+id/lbl_no_do" />

                    <TextView
                        android:id="@+id/lbl_tlsk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="16dp"
