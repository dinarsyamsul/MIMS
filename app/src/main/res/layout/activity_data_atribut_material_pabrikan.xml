<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataAtributMaterialPabrikan">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/dashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/montserrat_reguler"
        android:text="Data Atribut Material"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txt_nomorBatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Batch"
                android:textStyle="bold"
                android:textColor="#3F3D56"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <SearchView
                android:id="@+id/src_nomorBatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/srchview"
                android:layout_marginStart="32dp"
                android:layout_marginTop="18dp"
                android:queryHint="Search Here"
                android:layoutDirection="rtl"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_nomorBatch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txt_urutkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urutkan Berdasarkan"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_reguler"
                android:textColor="#3F3D56"
                android:textSize="16sp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/src_nomorBatch"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinp_pilihUrutan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:layout_constraintTop_toBottomOf="@+id/txt_urutkan"
                app:layout_constraintStart_toStartOf="parent">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:layout_weight="1"
                    android:background="@drawable/txt_input_layout"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_daftarList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar List Atribut"
                android:textStyle="bold"
                android:textColor="#3F3D56"
                android:textSize="16sp"
                android:layout_marginTop="48dp"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/montserrat_reguler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tinp_pilihUrutan"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_export"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn1"
                android:layout_marginTop="36dp"
                android:layout_marginStart="84dp"
                android:layout_marginEnd="32dp"
                android:text="Export"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_reguler"
                android:padding="10dp"
                android:drawableStart="@drawable/clipboard_3"
                app:layout_constraintStart_toEndOf="@+id/txt_daftarList"
                app:layout_constraintTop_toBottomOf="@+id/tinp_pilihUrutan"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total : "
                android:textStyle="bold"
                android:textColor="#3F3D56"
                android:textSize="16sp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_daftarList"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_jumlahData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Data "
                android:textStyle="bold"
                android:textColor="#3F3D56"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/txt_total"
                app:layout_constraintTop_toTopOf="@+id/txt_total"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_daftarList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardElevation="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_export"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_serial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/activity_list_data_material_pabrikan"/>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:visibility="visible" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>