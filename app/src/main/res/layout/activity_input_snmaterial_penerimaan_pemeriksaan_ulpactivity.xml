<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pnerimaan.InputSNMaterialPenerimaanPemeriksaanULPActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/dashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/montserrat_reguler"
        android:text="Input SN Material "
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_daftarList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:paddingBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/const1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F7F8FA">

                    <View
                        android:id="@+id/vw_line"
                        android:layout_width="5dp"
                        android:layout_height="0dp"
                        android:background="#26ACE2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lbl_no_material_inputsn_pemeriksaanulp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="No. Material"
                        android:textSize="10sp"
                        android:textColor="#3F3D56"
                        app:layout_constraintStart_toStartOf="@+id/vw_line"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/vw_circle"
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/dashboard"
                        app:layout_constraintStart_toEndOf="@+id/lbl_no_material_inputsn_pemeriksaanulp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_no_material_inputsn_pemeriksaanulp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="PLN123123"
                        android:textColor="#3F3D56"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_no_material_inputsn_pemeriksaanulp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_number"
                        app:layout_constraintStart_toStartOf="@+id/txt_no_material_inputsn_pemeriksaanulp"
                        app:layout_constraintTop_toBottomOf="@+id/txt_no_material_inputsn_pemeriksaanulp" />

                    <TextView
                        android:id="@+id/lbl_gudang_asal_pemeriksaanulp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="Gudang Asal"
                        android:textColor="#3F3D56"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@+id/imageView1"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView" />

                    <TextView
                        android:id="@+id/txt_gudang_asal_pemeriksaanulp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="xxxxxxxxx"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/lbl_gudang_asal_pemeriksaanulp"
                        app:layout_constraintStart_toStartOf="@+id/lbl_gudang_asal_pemeriksaanulp"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_gudang_asal_pemeriksaanulp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/unit_list_monitoring1"
                        app:layout_constraintEnd_toStartOf="@+id/lbl_spesifikasi_pemeriksaanulp"
                        app:layout_constraintStart_toEndOf="@+id/lbl_gudang_asal_pemeriksaanulp"
                        app:layout_constraintTop_toTopOf="@+id/lbl_gudang_asal_pemeriksaanulp" />

                    <TextView
                        android:id="@+id/lbl_spesifikasi_pemeriksaanulp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="Spesifkasi"
                        android:textColor="#3F3D56"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView1"
                        app:layout_constraintTop_toTopOf="@+id/imageView1" />

                    <TextView
                        android:id="@+id/txt_spesifikasi_pemeriksaanulp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="xxxxxxxxx"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/lbl_spesifikasi_pemeriksaanulp"
                        app:layout_constraintStart_toEndOf="@+id/imageView1"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_gudang_asal_pemeriksaanulp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_reguler"
                android:text="Scan"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/cv_daftarList"
                app:layout_constraintTop_toBottomOf="@id/cv_daftarList" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_scanSnMaterial"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_scansnmaterial"
                android:drawableStart="@drawable/scan_btn_snmaterial1"
                android:fontFamily="@font/montserrat_reguler"
                android:text="Scan SN Material"
                android:textColor="#0785A7"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/txt_scan"
                app:layout_constraintTop_toBottomOf="@id/txt_scan" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_inputSnManual"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/btn_scansnmaterial"
                android:drawableStart="@drawable/input_sn_material"
                android:fontFamily="@font/montserrat_reguler"
                android:text="Input SN Material"
                android:textColor="#0785A7"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/btn_scanSnMaterial"
                app:layout_constraintStart_toEndOf="@id/btn_scanSnMaterial"
                app:layout_constraintTop_toTopOf="@id/btn_scanSnMaterial" />

            <TextView
                android:id="@+id/tv_snmaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="SN. Material"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/btn_scanSnMaterial"
                app:layout_constraintTop_toBottomOf="@+id/btn_scanSnMaterial" />

            <EditText
                android:id="@+id/src_material"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/srchview"
                android:drawableEnd="@drawable/ic_search"
                android:fontFamily="@font/montserrat_reguler"
                android:hint="Search here"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_snmaterial" />

            <TextView
                android:id="@+id/txt_daftarlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_reguler"
                android:text="Daftar List Material"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_snmaterial"
                app:layout_constraintTop_toBottomOf="@id/src_material" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#B9B9B9"
                app:layout_constraintEnd_toEndOf="@id/src_material"
                app:layout_constraintStart_toStartOf="@id/txt_daftarlist"
                app:layout_constraintTop_toBottomOf="@id/txt_daftarlist" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/data_tidak_ditemukan_material" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/montserrat_reguler"
                    android:text="Material Kosong"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/montserrat_reguler"
                    android:text="Silahkan lakukan scan SN Material"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_noPo"
                android:layout_width="0dp"
                android:layout_height="450dp"
                app:layout_constraintBottom_toTopOf="@id/btn_simpan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                tools:listitem="@layout/item_input_sn_pemeriksaan_penerimaanulp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:text="Simpan"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_noPo"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>