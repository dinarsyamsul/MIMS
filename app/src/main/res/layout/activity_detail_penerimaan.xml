                        android:text="111011"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/lbl_petugas_pengiriman"
                        app:layout_constraintStart_toEndOf="@+id/imageView5"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_kurir" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/unit_list_monitoring1"
                        app:layout_constraintEnd_toStartOf="@+id/lbl_tlsk"
                        app:layout_constraintStart_toEndOf="@+id/lbl_no_do"
